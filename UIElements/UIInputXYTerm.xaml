<UserControl x:Class="Task_in_numerical_methods.UIElements.UIInputXYTerm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Task_in_numerical_methods.UIElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Height="20" Orientation="Horizontal" Margin="5">
        <TextBlock Text="{Binding BeforeText}"/>
        <TextBox x:Name="inputX" Height="20" Width="20" TextChanged="inputX_TextChanged"/>
        <TextBlock Text="{Binding BetweenText}"/>
        <TextBox x:Name="inputY" Height="20" Width="20" TextChanged="inputX_TextChanged"/>
        <TextBlock Text="{Binding AfterText}"/>
    </StackPanel>
    
</UserControl>
